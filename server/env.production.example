# StudyControl Backend - Production Environment Configuration
# IMPORTANT: Never commit this file to version control!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Replace with your MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database?retryWrites=true&w=majority&appName=your_app_name

# Test database (optional, for staging)
MONGODB_TEST_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_test_database?retryWrites=true&w=majority

# =============================================================================
# JWT CONFIGURATION - CRITICAL FOR SECURITY
# =============================================================================
# Generate strong secrets using: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-generate-with-openssl-rand
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-generate-with-openssl-rand
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# EMAIL CONFIGURATION (for password reset)
# =============================================================================
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Your frontend domain(s) - comma separated for multiple domains
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# RATE LIMITING (Production Settings)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=REPLACE_WITH_STRONG_SESSION_SECRET

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1
API_PREFIX=/api/v1
