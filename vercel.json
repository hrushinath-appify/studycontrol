{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "server/src/vercel.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/src/**", "server/package.json"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "server/src/vercel.ts"
    },
    {
      "src": "/health",
      "dest": "server/src/vercel.ts"
    },
    {
      "src": "/api/debug",
      "dest": "server/src/vercel.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}